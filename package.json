{
  "name": "book_store_api",
  "version": "1.0.0",
  "description": "Proyecto inicial para aprender las bases de Graphql ",
  "main": "build/app.js",
  "scripts": {
    "start": "node build/app.js",
    "build": "npx tsc -p . && ncp src/schema build/schema",
    "dev": "nodemon \"src/app.ts\" --exec \"ts-node\" \"src/app.ts\" -e ts,graphql,json,js "
  },
  "keywords": [
    "graphql",
    "graphql-basic",
    "unions",
    "query",
    "mutations",
    "book-store",
    "apollo-server-express-3"
  ],
  "author": "Kevin Ortiz",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^3.10.1",
    "compression": "^1.7.4",
    "express": "^4.18.1",
    "graphql": "^16.6.0",
    "graphql-import-node": "^0.0.5",
    "graphql-tools": "^8.3.3",
    "ncp": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/node": "^18.7.6",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1"
  }
}
